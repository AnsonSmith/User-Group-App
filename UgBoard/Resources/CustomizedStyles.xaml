		        Value="30" />
        <Setter Property="FontFamily"
		        Value="Trebuchet MS" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10"
				                  Color="#68756A"
				                  Opacity="1"
				                  ShadowDepth="0"
				                  Direction="0" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBlock"
	       x:Key="swagDescriptionText">
        <Setter Property="Foreground"
		        Value="AntiqueWhite" />
        <Setter Property="FontSize"
		        Value="20" />
        <Setter Property="FontFamily"
		        Value="Trebuchet MS" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10"
				                  Color="#68756A"
				                  Opacity="1"
				                  ShadowDepth="0"
				                  Direction="0" />
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="TextBlock"
	       x:Key="swagInfoText">
        <Setter Property="Foreground"
		        Value="{DynamicResource DisabledForegroundBrush}" />
        <Setter Property="FontSize"
		        Value="14" />
        <Setter Property="FontFamily"
		        Value="Trebuchet MS" />

        <Setter Property="Margin"
		        Value="4" />
    </Style>


    <Style TargetType="TextBlock"
	       x:Key="raffleWinnerText">
        <Setter Property="Foreground"
		        Value="{DynamicResource TextBrush}" />
        <Setter Property="FontSize"
		        Value="300" />
        <Setter Property="FontFamily"
		        Value="Trebuchet MS" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="10"
				                  Color="AntiqueWhite"
