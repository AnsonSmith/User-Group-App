        <Setter Property="FontSize"
		        Value="10" />
        <Setter Property="FontFamily"
		        Value="Trebuchet MS" />

        <Setter Property="Margin"
		        Value="4" />
    </Style>


    <Style TargetType="TextBlock"
	       x:Key="swagTitleText">
